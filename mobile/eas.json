{
    "cli": {
        "version": ">= 3.14.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "preview": {
            "distribution": "internal"
        },
        "production": {
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {
            "ios": {
                "ascAppId": "@secret:IOS_ASC_APP_ID",
                "ascApiKeyPath": "AscApiKeyFile.p8",
                "ascApiKeyIssuerId": "@secret:IOS_ASC_API_KEY_ISSUER_ID",
                "ascApiKeyId": "@secret:IOS_ASC_API_KEY_ID"
            }
        }
    }
}
